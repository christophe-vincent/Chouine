<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <useControls filename="nifty-controls/nifty-slider.xml" />
    
    <screen id="start" visibleToMouse="true" controller="ChouineRenderer.ControlScreen">
        <layer childLayout="center">
            <control id="RadioGroup-1" name="radioButtonGroup"/>
            <control id="RadioGroup-2" name="radioButtonGroup"/>
            <control id="RadioGroup-3" name="radioButtonGroup"/>

            <panel width="100%" height="100%" align="center" valign="center" childLayout="vertical" backgroundColor="#cccf">
                
                <panel height="20%" width="75%" align="center" childLayout="center" backgroundColor="#0000">  
                    <text text="La Chouine" font="Interface/Fonts/Leander_60.fnt" width="100%" height="100%" color="#C11F" />
                </panel>
                <panel height="65%" width="75%" align="center" childLayout="horizontal" backgroundColor="#cccf">  
                    <panel height="100%" width="30%" align="center" childLayout="vertical" backgroundColor="#cccf"> 
                        <panel style="nifty-panel" marginTop="2%" align="center" childLayout="vertical" width="90%" height="25%">
                            <control name="label" text="Partie en " />
                            <panel childLayout="vertical" align="center" backgroundColor="#8001" paddingLeft="1%" paddingRight="1%" paddingTop="1%" paddingBottom="1%" width="80%">
                                <effect>
                                    <onActive name="border" color="#0008" />
                                </effect>
                                <panel childLayout="horizontal" marginLeft="5%">
                                    <control name="radioButton" id="1point" group="RadioGroup-1" with="10%" />
                                    <control name="label" text=" 1 point"/>
                                </panel>
                                <panel childLayout="horizontal" marginLeft="5%">
                                    <control name="radioButton" id="3points" group="RadioGroup-1" />
                                    <control name="label" text=" 3 points"/>                                    
                                </panel>
                                <panel childLayout="horizontal" marginLeft="5%">
                                    <control name="radioButton" id="5points" group="RadioGroup-1" />
                                    <control name="label" text=" 5 points "/>                                    
                                </panel>                          
                            </panel>
                        </panel>
                        
                        <panel style="nifty-panel" marginTop="1%" align="center" childLayout="vertical" width="90%" height="20%">
                            <control name="label" text="Nombre de manches" />
                            <panel childLayout="vertical" align="center" backgroundColor="#8001" paddingLeft="1%" paddingRight="1%" paddingTop="1%" paddingBottom="1%" width="80%">
                                <effect>
                                    <onActive name="border" color="#0008" />
                                </effect>
                                <panel childLayout="horizontal" marginLeft="5%">
                                    <control name="radioButton" id="1round" group="RadioGroup-2" with="10%" />
                                    <control name="label" text=" 1 manche " with="90%" />                                    
                                </panel>
                                <panel childLayout="horizontal" marginLeft="5%">
                                    <control name="radioButton" id="2round" group="RadioGroup-2" />
                                    <control name="label" text=" 2 manches"/>                                    
                                </panel>
                            </panel>
                        </panel>
                        
                        <panel style="nifty-panel" marginTop="1%" align="center" childLayout="vertical" width="90%" height="25%">
                            <control name="label" text="Niveau de l'ordinateur" />
                            <panel childLayout="vertical" align="center" backgroundColor="#8001" paddingLeft="1%" paddingRight="1%" paddingTop="1%" paddingBottom="1%" width="80%">
                                <effect>
                                    <onActive name="border" color="#0008" />
                                </effect>
                                <panel childLayout="horizontal" marginLeft="5%">
                                    <control name="radioButton" id="cl_low" group="RadioGroup-3"/>
                                    <control name="label" text=" Faible"/>                                    
                                </panel>
                                <panel childLayout="horizontal" marginLeft="5%">
                                    <control name="radioButton" id="cl_medium" group="RadioGroup-3" />
                                    <control name="label" text=" Moyen"/>                                    
                                </panel>
                                <panel childLayout="horizontal" marginLeft="5%">
                                    <control name="radioButton" id="cl_high" group="RadioGroup-3" selected="true" />
                                    <control name="label" text=" Fort"/>                                    
                                </panel>
                            </panel>
                        </panel>
                        
                        <panel style="nifty-panel" align="center" childLayout="vertical" width="90%" height="25%">
                            <control name="label" text="Ramassage des cartes"/>
                            <panel childLayout="horizontal">
                                <control id="sliderTempo" name="horizontalSlider" width="100px" />
                                <control name="label" id="tempoVal" text="   2.0 sec"/>
                            </panel>
                            <panel childLayout="horizontal" marginTop="20%">
                                <control name="label" text="Mode enfant     "/>
                                <control id="CheckBoxHelp" name="checkbox" />
                            </panel>
                        </panel>
                        
                    </panel>
                    <panel height="100%" width="70%" align="center" childLayout="center" backgroundColor="#bbbb">
                          <image filename="Interface/play.png" valign="center" align="center" height="100" width="100"> 
                            <interact onClick="startGame()"/>
                          </image>
                    </panel>
                </panel>
                <panel height="5%" />
                <panel width="75%" height="10%" align="center" childLayout="horizontal">
                    <control id="buttonOk" name="button" label="Jouer" visibleToMouse="true">
                        <interact onClick="startGame()"/>
                    </control>
                    <panel width="*" />
                    <control id="buttonCancel" name="button" label="Quitter">
                        <interact onClick="quitGame()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    
    <screen id="game" visibleToMouse="true" controller="ChouineRenderer.ControlScreen">
        <layer id="controls" backgroundColor="#0000" childLayout="vertical">
            <effect>
                <onCustom customKey="fadeInControls" name="fade" start="#0" end="#f" length="100" neverStopRendering="true" />
            </effect>
            <panel height="100%" width="15%" align="left" childLayout="vertical" backgroundColor="#cccf">     
                
                <panel height="27%" marginTop="2%" align="center" childLayout="vertical" backgroundColor="#666f">
                    <text align="center" font="Interface/Fonts/Leander_28.fnt" text="Ordinateur"/>
                    <text font="Interface/Fonts/Leander_28.fnt" text="*" width="100%"/>
                    <text font="Interface/Fonts/Leander_28.fnt" text="Scores" width="100%"/>
                    <panel marginLeft="10%" align="left" childLayout="vertical">  
                        <panel childLayout="horizontal">
                            <text font="Interface/Fonts/Leander_28.fnt" text="Points : " align="left"/> 
                            <text id="computerScorePoints" font="Interface/Fonts/Leander_28.fnt" text=" 0" align="left"/>  
                        </panel>
                    
                        <panel childLayout="horizontal">
                            <text font="Interface/Fonts/Leander_28.fnt" text="Annonce : " align="left"/> 
                            <text id="computerScoreAnn" font="Interface/Fonts/Leander_28.fnt" text=" 0" align="left"/>  
                        </panel>
                    </panel>
                    <panel marginLeft="10%" id="panelCompMatch" align="left" childLayout="vertical">  
                        <text align="center" text="-" font="Interface/Fonts/Leander_28.fnt"/>
                        <panel childLayout="horizontal">
                            <text font="Interface/Fonts/Leander_28.fnt" text="Parties : " align="left"/> 
                            <text id="computerRoundPoints" font="Interface/Fonts/Leander_28.fnt" text=" 0 / 1" align="left"/>  
                        </panel>
                    
                        <panel marginLeft="2%" childLayout="horizontal">
                            <text font="Interface/Fonts/Leander_28.fnt" text="Manche : " align="left"/> 
                            <text id="computerRounds" font="Interface/Fonts/Leander_28.fnt" text=" 0 / 1" align="left"/>  
                        </panel>
                    </panel>
                </panel>
              
                
                <panel marginTop="1%" height="17%" align="center" childLayout="vertical">
                    <text font="Interface/Fonts/Leander_28.fnt" text="Atout" width="100%" color="#000F" />
                    <text id="trump" font="Interface/Fonts/Leander_28.fnt" text="" width="100%" color="#000F" />
                    <text font="Interface/Fonts/Leander_28.fnt" text="*" width="100%" color="#000F" />
                    <text id="labelPick" font="Interface/Fonts/Leander_28.fnt" text="Pioche" width="100%" color="#000F" />
                    <text id="pickNumber" font="Interface/Fonts/Leander_28.fnt" text="22 cartes" width="100%" color="#000F" />
                </panel>
                
                <panel marginTop="2%" height="27%" align="center" childLayout="vertical" backgroundColor="#666f">
                    <text font="Interface/Fonts/Leander_28.fnt" text="Vous" width="100%"/>
                    <text font="Interface/Fonts/Leander_28.fnt" text="*" width="100%"/>
                    
                    <text font="Interface/Fonts/Leander_28.fnt" text="Scores" width="100%"/>
                    
                    <panel marginLeft="10%" id="panelScoresUser" align="left" childLayout="vertical">  
                        <panel childLayout="horizontal">
                            <text font="Interface/Fonts/Leander_28.fnt" text="Points : " align="left"/> 
                            <text id="userScorePoints" font="Interface/Fonts/Leander_28.fnt" text=" 0" align="left"/>  
                        </panel>
                        
                        <panel childLayout="horizontal">
                            <text font="Interface/Fonts/Leander_28.fnt" text="Annonce : " align="left"/> 
                            <text id="userScoreAnn" font="Interface/Fonts/Leander_28.fnt" text=" 0" align="left"/>  
                        </panel>
                    </panel>
                    <panel marginLeft="10%" align="left" childLayout="vertical">  
                        <text align="center" text="-" font="Interface/Fonts/Leander_28.fnt"/>
                        <panel childLayout="horizontal">
                            <text font="Interface/Fonts/Leander_28.fnt" text="Parties : " align="left"/> 
                            <text id="userRoundPoints" font="Interface/Fonts/Leander_28.fnt" text=" 0 / 1" align="left"/>  
                        </panel>
                    
                        <panel marginLeft="2%" childLayout="horizontal">
                            <text font="Interface/Fonts/Leander_28.fnt" text="Manche : " align="left"/> 
                            <text id="userRounds" font="Interface/Fonts/Leander_28.fnt" text=" 0 / 1" align="left"/>  
                        </panel>
                    </panel>
                    <panel id="empty" height="5%" />
                </panel>
                
                <panel marginTop="1%" height="15%" childLayout="vertical">
                    <control name="button" label="Annonce" id="AnnounceButton" align="center" valign="top" width="80%" height="40%" visibleToMouse="true"> 
                        <interact onClick="startAnnounce()"/>
                    </control>
                    <panel id="empty" height="5%" />
                    <control name="button" label="Carte d'atout" id="TrumpCard" align="center" valign="top" width="80%" height="40%" visibleToMouse="true"> 
                        <interact onClick="changeTrumpCard()"/>
                    </control>
                    
                </panel>
                
                <panel marginTop="1%" childLayout="center" align="center" >
                    <control name="button" label="Quitter" id="EndRound" width="80%" height="40%" align="center" valign="top" visibleToMouse="true"> 
                        <interact onClick="finishRound()"/>
                    </control>
                </panel>      
            </panel>         
        </layer>
        <layer id="messagelayer" name="message" backgroundColor="#0000" childLayout="absolute">
            <effect>
                <onCustom customKey="fadeOut1" name="fade" start="#f" end="#e" length="2000" neverStopRendering="true" />
                <onCustom customKey="fadeOut2" name="fade" start="#e" end="#0" length="1000" neverStopRendering="true" />
            </effect>
            <panel id="messagepanel" height="30%" width="70%" x="23%" y="30%" childLayout="center" backgroundColor="#222B">  
                <text id="messagetext" text="" textVAlign="center" font="Interface/Fonts/Leander_60.fnt" width="100%" height="100%" wrap="true"/>           
            </panel>         
        </layer>
        
        <layer id="gameoverlayer" name="gameover" backgroundColor="#0000" childLayout="center">
            <panel id="gameoverpanel" marginLeft="7%" width="80%" height="40%" childLayout="vertical" backgroundColor="#222E">  
                <panel childLayout="vertical" height="80%">
                    <text id="gameovertext" text="Partie terminée" textVAlign="center" font="Interface/Fonts/Leander_60.fnt" width="100%" height="100%" wrap="true"/>    
                </panel>
                <panel childLayout="horizontal" marginTop="6%">
                    <control name="button" label="Continuer" width="15%" marginLeft="23%" id="replayButton" align="center" valign="bottom" visibleToMouse="true"> 
                        <interact onClick="replay()"/>
                    </control>
                    <control name="button" label="Arreter" width="15%" marginLeft="23%" id="stopPlayButton" align="center" valign="bottom" visibleToMouse="true"> 
                        <interact onClick="stopPlaying()"/>
                    </control>
                </panel>       
            </panel>         
        </layer>
    </screen>
    
    <popup id="popupConfirm" childLayout="center" controller="ChouineRenderer.ControlScreen">
        <panel style="nifty-panel" align="center" childLayout="vertical" width="300px" height="130px">
            <panel childLayout="horizontal" marginTop="10%" height="40%">
                <text text="Etes vous sûr de vouloir quitter ?" textVAlign="center" font="Interface/Fonts/Leander_28.fnt" width="100%" height="100%" wrap="true"/>
            </panel>
            <panel childLayout="horizontal"  marginTop="10%" height="40%">
                <control name="button" label="Oui" id="buttonConfirmOk" width="28%" marginLeft="14%" visibleToMouse="true"> 
                    <interact onClick="confirmOK()"/>
                </control>
                <control name="button" label="Non" id="buttonConfirmKo" width="28%" marginLeft="14%" visibleToMouse="true"> 
                    <interact onClick="confirmKO()"/>
                </control>
            </panel>
        </panel>
    </popup>
    
</nifty>